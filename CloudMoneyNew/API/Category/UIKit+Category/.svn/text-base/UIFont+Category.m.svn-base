#import "UIFont+Category.h"

static CGFloat const kDefaultSize = 14;

@implementation UIFont (Category)

+ (UIFont *)STHeiti_light{
    return [UIFont fontWithName:@"STHeitiSC-Light" size:kDefaultSize];
}

+ (UIFont *)STHeiti_lightWithSize:(CGFloat)size{
    return [UIFont fontWithName:@"STHeiti_light" size:size];
}

#pragma -mark
+ (UIFont *)Helvetica{
    return [UIFont fontWithName:@"Helvetica" size:kDefaultSize];
}

+ (UIFont *)HelveticaWithSize:(CGFloat)size{
    return [UIFont fontWithName:@"Helvetica" size:size];
}

+ (UIFont *)lightHeveticaWithsize:(CGFloat)size{
    return [UIFont fontWithName:@"Helvetica-Light" size:size];
}

+ (UIFont *)blodHelveticaWithSize:(CGFloat)size{
    return [UIFont fontWithName:@"Helvetica-Bold" size:size];
}

+ (UIFont *)italicHelveticaWithSize:(CGFloat)size{
    return [UIFont fontWithName:@"Helvetica-Oblique" size:size];
}

+ (UIFont *)blodItalicHelveticaWithSize:(CGFloat)size{
    return [UIFont fontWithName:@"Helvetica-BoldOblique" size:size];
}

+ (UIFont *)lightItalicHeveticaWithsize:(CGFloat)size{
    return [UIFont fontWithName:@"Helvetica-LightOblique" size:size];
}

#pragma -mark
+ (UIFont *)Arial{
    return [UIFont fontWithName:@"ArialMT" size:kDefaultSize];
}
+ (UIFont *)ArialWithSize:(CGFloat)size{
    return [UIFont fontWithName:@"ArialMT" size:size];
}
+ (UIFont *)italicArialWithSize:(CGFloat)size{
    return [UIFont fontWithName:@"Arial-ItalicMT" size:size];
}
+ (UIFont *)boldArialWithSize:(CGFloat)size{
    return [UIFont fontWithName:@"Arial-BoldMT" size:size];
}
+ (UIFont *)boldItalicArialWithSize:(CGFloat)size{
    return [UIFont fontWithName:@"Arial-BoldItalicMT" size:size];
}

@end
